<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_hospital_appointment_form" model="ir.ui.view">
        <field name="name">hospital.appointment.form</field>
        <field name="model">hospital.appointment</field>
        <field name="arch" type="xml">
            <form string="">
                <header>
                    <field name="state" widget="statusbar" nolabel="1"/>
                    <button name="action_in_consultation" string="In consultation" type="object" states="draft"
                    />
                    <button name="action_done" string="Done" type="object" states="in_consultation,cancel"
                            data-hotkey="v"/>
                    <button name="action_draft" string="Draft" type="object" states="in_consultation,cancel"/>
                    <button name="action_cancel" string="Cancel" type="object" data-hotkey="z"/>
                    <button name="action_test" string="Object Button"
                            type="object" class="oe_highlight"/>


                    <button name="%(Hospital.action_hospital_patient)d" string="Action Button"
                            confirm="Are you sure to open patient details"
                            help="redirect to patient details"
                            type="action" class="oe_highlight"/>

                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="priority" widget="priority" class="mr-3"/>
                        </h1>
                    </div>

                    <group>
                        <group>
                            <field name="patient_id"/>
                            <field name="ref"/>
                            <field name="doctor_id" widget="many2one_avatar"/>
                            <field name="gender"/>
                            <field name="Phone"/>
                        </group>
                        <group>
                            <field name="appointment_time"/>
                            <field name="booking_date" help="booking date"/>
                            <field name="date_of_birth"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Prescription">
                            <field name="prescription" string="Prescription"
                                   options="{'collaborative':true,'resizable':true}"/>
                        </page>
                        <page string="Pharmacy">
                            <field name="pharmacy_lines_ids">
                                <field name="doctor" string="Doctor Name"/>
                                <field name="depart"/>
                                <tree>
                                    <field name="product_id"/>
                                    <field name="price_unit"/>
                                    <field name="qty"/>
                                </tree>
                                    <form>
                                        <group>
                                            <field name="product_id"/>
                                            <field name="price_unit"/>
                                            <field name="qty"/>
                                        </group>
                                    </form>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="message_ids"/>
                    <field name="activity_ids"/>
                </div>
            </form>
        </field>
    </record>


    <record id="view_hospital_appointment_tree" model="ir.ui.view">
        <field name="name">hospital.appointment.tree</field>
        <field name="model">hospital.appointment</field>
        <field name="arch" type="xml">
            <tree decoration-success="state =='done'"
                  decoration-danger="state=='cancel'"
                  decoration-warning="state == 'in_consultation'"
                  decoration-info="state =='draft'"
                  sample="1" multi_edit="1">
                <field name="patient_id" optional="show"/>
                <field name="gender" optional="show"/>
                <field name="doctor_id" widget="many2one_avatar_user"/>
                <field name="Phone" optional="show"/>
                <field name="booking_date" optional="show" default_focus="1"/>
                <field name="activity_ids" widget="list_activity"/>
                <field name="state"
                       decoration-success="state =='done'"
                       decoration-info="state =='draft'"
                       decoration-warning="state == 'in_consultation'"
                       decoration-danger="state=='cancel'"
                       widget="badge"/>
            </tree>
        </field>
    </record>


    <record id="view_hospital_appointment_search" model="ir.ui.view">
        <field name="name">hospital.appointment.search</field>
        <field name="model">hospital.appointment</field>

        <field name="arch" type="xml">
            <search>

            </search>
        </field>
    </record>


    <record id="action_hospital_appointment_menu" model="ir.actions.act_window">
        <field name="name">appointment</field>
        <field name="res_model">hospital.appointment</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'search_default_filter_male': 1,'search_default_group_by_gender': 1}</field>

        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                create your first Appointment!
            </p>
        </field>
    </record>
    <menuitem name="Appointments"
              id="appointment_menu"
              parent="appointment_master_menu"
              action="action_hospital_appointment_menu"
              sequence="0"/>

</odoo>